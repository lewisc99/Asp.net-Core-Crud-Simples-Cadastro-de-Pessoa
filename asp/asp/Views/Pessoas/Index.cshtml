@model IEnumerable<crud.Models.Pessoa>

@{
    ViewData["Title"] = "Index";
}

@{
    //Layout  = "_Layout";
    Layout = "_Layout";
}

@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Mensagem"]
    </div>

}

@if (TempData["MensagemError"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemError"]
    </div>

}

<h2>Index</h2>

<p>
    <a href="/pessoas/criarpessoa" class="btn btn-dark">Cadastrar Pessoa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SobreNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SobreNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CPF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Idade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    <a href="/pessoas/atualizarpessoa/@item.Id">Editar</a>

                    <a href="/pessoas/excluirpessoa/@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
